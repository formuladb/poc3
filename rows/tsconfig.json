{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,        
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@core/*": ["../pages/src/core/*"],
        },
        "lib": [
            "ES2018"
        ]
    },
    "include": [
        "./src/**/*",
        "../pages/src/core/**/*",
    ]
}